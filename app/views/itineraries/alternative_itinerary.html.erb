<!-- Adresses en haut (identique √† best_itinerary) -->
<div class="position-absolute start-50 translate-middle z-2 mt-3 px-3" style="top: 7.5%; width: 80%">
  <%= render "shared/address", itinerary_objective: @itinerary_objective %>
</div>

<!-- Carrousel √† la place du Bottom Sheet -->
<div class="alternatives-carousel z-2">
  <!-- Header du carrousel -->
  <div class="carousel-header">
    <h2 class="carousel-title">Alternatives</h2>
    <p class="carousel-subtitle">Swipe to explore different themed itineraries</p>
  </div>
  <!-- Carrousel Bootstrap -->
  <div id="alternativesCarousel" class="carousel slide" data-bs-interval="false">

    <!-- Indicateurs -->
    <div class="carousel-indicators custom-indicators">
      <% @itinerary_objective.itineraries.drop(1).each_with_index do |itinerary, index| %>
        <button type="button" data-bs-target="#alternativesCarousel" data-bs-slide-to="<%= index %>"
                class="<%= 'active' if index == 0 %>" aria-current="<%= 'true' if index == 0 %>">
        </button>
      <% end %>
    </div>

    <!-- Contenu du carrousel -->
    <div class="carousel-inner">
      <% @itinerary_objective.itineraries.drop(1).each_with_index do |itinerary, index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="itinerary-card">

            <!-- En-t√™te de la card -->

            <div class="card-header">
              <h3 class="itinerary-theme">
                üìç <%= itinerary.theme.capitalize %>: ‚è± <span id="duration"></span> - üìè <span id="distance"></span>
              </h3>
            </div>

            <!-- Description -->
            <div class="card-content">
              <p class="itinerary-description"><%= itinerary.description %></p>

              <!-- POIs preview (les 3 premiers) -->
              <div class="pois-preview">
                <h6>Highlights:</h6>
                <div class="pois-list">
                  <% itinerary.point_of_interests.limit(3).each_with_index do |poi, poi_index| %>
                    <div class="poi-preview-item">
                      <span class="poi-number"><%= poi_index + 1 %></span>
                      <div class="poi-info">
                        <span class="poi-name"><%= poi.name %></span>
                        <span class="poi-description"><%= poi.description %></span>
                      </div>
                    </div>
                  <% end %>

                  <% if itinerary.point_of_interests.count > 3 %>
                    <div class="more-pois">
                      +<%= itinerary.point_of_interests.count - 3 %> more outstanding stops
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Boutons d'action -->
            <div class="card-actions">
              <%= link_to "Choose this alternative",
                  itinerary_objective_itinerary_path(@itinerary_objective, itinerary),
                  class: "btn btn-primary rounded-4 flex-fill" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Contr√¥les de navigation -->
    <button class="carousel-control-prev" type="button" data-bs-target="#alternativesCarousel" data-bs-slide="prev">
      <i class="fas fa-chevron-left"></i>
      <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#alternativesCarousel" data-bs-slide="next">
      <i class="fas fa-chevron-right"></i>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Bouton de retour -->
  <div class="back-button-container">
    <%= link_to "‚Üê To the initial itinerary",
        best_itinerary_itinerary_objective_itineraries_path(@itinerary_objective),
        class: "btn btn-outline-light btn-sm" %>
  </div>

</div>
<!-- Carte en arri√®re-plan (identique √† best_itinerary) -->
<%= render "shared/map", waypoints: @waypoints %>
