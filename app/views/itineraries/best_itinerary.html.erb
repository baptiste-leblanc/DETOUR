  <div class="py-5">
    <div class="liquid-glass p-3">
      <%= render "shared/address", itinerary_objective: @itinerary_objective %>
    </div>
  </div>

  <div class="bottom-sheet z-2 p-3">
    <!-- Header avec icÃ´ne et titre -->
    <div class="sheet-header">
      <%= image_tag "flaneur.png", alt: "FlÃ¢neur", class: "flaneur-icon" %>
      <h2 class="sheet-title">
