<!-- Carrousel à la place du Bottom Sheet -->
<div class="liquid-glass alternatives-carousel z-2">

  <!-- Titre -->
  <h2>Best Itinerary</h2>

  <!-- Rappel Point de départ / Point d'arrivée (old : ps-3 mt-1 mb-2) -->
  <div class="sheet-rappel">
    <%= render "shared/address", itinerary_objective: @itinerary_objective %>
  </div>

  <!-- Div englobante -->
  <div class="sheet-card">

    <!-- Div theme / duration + distance / description-->
    <div>
      <h4>🚶🏻‍➡️<%= @itinerary.theme.capitalize %></h4>
      <p>⏱ ⏳ <span class="duration"></span> → <span class="distance"></span></p>
      <p class="sheet-description"><%= @itinerary.description %></p>
    </div>

    <!-- Points d'intérêt du parcours -->
    <!-- <div class="pois-list mt-2 mb-1 ps-3"> -->
      <div class="pois-list">
      <% @itinerary.point_of_interests.each_with_index do |poi, poi_index| %>
        <div class="poi-preview-item">
          <span class="poi-number"><%= poi_index + 1 %></span>
          <div class="poi-info">
            <span class="poi-name"><%= poi.name %></span>
            <span class="poi-description"><%= poi.description %></span>
          </div>
        </div>
      <% end %>
    </div>

  </div>
  <!-- Bouton de retour -->
  <div class="button-container">
    <div class="pt-1 mb-1">
      <%= link_to "GO", itinerary_objective_itinerary_path(@itinerary_objective, @itinerary), class: "go btn btn-success mb-2"%>
    </div>
    <div class="d-flex gap-1">
      <%= link_to "👈​ New itinerary", root_path, class: "btn flex-fill", style: "background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); border-color: #a8edea;"%>
      <%= link_to "See alternatives", alternative_itinerary_itinerary_objective_itineraries_path(@itinerary_objective), class: "btn flex-fill", style: "background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); border-color: #a8edea;"%>
    </div>
  </div>

</div>
<!-- Carte en arrière-plan (identique à best_itinerary) -->
<div class="map-itinerary-container">
  <%= render "shared/map", waypoints: @waypoints %>
</div>
