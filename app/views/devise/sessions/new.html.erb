<div class="logo-container">
  <%= image_tag "logo.png", alt: "Logo", class: "logo-img" %>
</div>

<div class="login-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  placeholder: "Email",
                  input_html: { autocomplete: "email", class: "input-field" } %>

      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: "Password",
                  input_html: { autocomplete: "current-password", class: "input-field" } %>

      <% if devise_mapping.rememberable? %>
        <div class="remember-me">
          <%= f.input :remember_me, as: :boolean, label: "Remember me" %>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in", class: "btn-login" %>
    </div>
  <% end %>
</div>

<div class="login-links">
  <%= render "devise/shared/links" %>
</div>
